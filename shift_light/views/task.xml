<odoo>
    <record model="ir.ui.view" id="task_view_tree">
        <field name="name">Shift List</field>
        <field name="model">shift.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_time" />
                <field name="end_time" />
                <field name="partner_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="task_view_form">
        <field name="name">Task Template Form</field>
        <field name="model">shift.shift</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reserved" string="Reserve" type="object" class="btn-primary"/>
                    <button name="action_need_help" string="Need help" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record model="ir.ui.view" id="task_view_form">
        <field name="name">Task Template Form</field>
        <field name="model">shift.shift</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="task_template_id" />
                            <field name="task_type_id" />
                            <field
                                name="partner_id"
                                options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="start_time" />
                            <field name="end_time" />
                        </group>
                    </group>
                </sheet>
                <!-- Solution Ex1 -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>


    <record id="view_calendar_shift" model="ir.ui.view">
        <field name="name">Shift Calendar</field>
        <field name="model">calendar.event</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Shifts" 
                date_start="start_time" 
                date_stop="end_time" 
                form_view_id="%(shift_light.shift_view_form_calendar)d"
                event_open_popup="true"
                quick_create="false"
                color="color">
                <field name="state" filters="1"/>
                <field name="partner_id" options="{'icon': 'fa fa-user-o'}"/>
                <field name="partner_phone" options="{'icon': 'fa fa-phone-o'}"/>
            </calendar>
        </field>
    </record>

    

    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_task">
        <field name="name">Shifts</field>
        <field name="res_model">shift.shift</field>
        <field name="view_mode">calendar,tree,form,pivot</field>
    </record>

</odoo>
